 
        <section class="hero ">
             <div class="container mx-auto flex items-center justify-between">
                 <div class="w-1/2 homeclass">
                     <h6 class="text-lg font-bold"><em>Are you hungry?</em></h6>
                     <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
                     <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
                 </div>
                 <div class="w-1/2 pt-16 homeimg">
                     <img src="/img/pizza.png" alt="">
                 </div>
             </div>
        </section>

        <section class="menu container mx-auto py-8">
            <h1 class="text-xl font-bold mb-8">All food items</h1>
          <div class=" grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">

            <% pizzas.forEach(function(pizza){ %>
             <div class="homecard w-full md:w-64">
                <div>
                    <img class="h-40 mb-4 mx-auto mt-2" src="/img/<%= pizza.image %>" alt="">
                </div>
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">₹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-blod ">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
              </div>
           <% }) %>

