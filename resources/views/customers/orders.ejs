<section class="orders light-section hero">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All orders</h1>
        <% if(messages.success) { %>
        <div id="success-alert" role="alert" class="flex items-center bg-green-500 text-white text-sm font-bold by-3 px-4">
            <i class="fa fa-hand-o-right font-white" aria-hidden="true"></i>
            <p class="pl-4 h-4 "><%= messages.success %></p>
        </div>
        <% } %>

        <table class="w-full table-auto bg-white">
             <thead>
                 <tr>
                     <th class="px-4 py-2 text-left">Order Id</th>
                     <th class="px-4 py-2 text-left">Phone</th>
                     <th class="px-4 py-2 text-left">Address</th>
                     <th class="px-4 py-2 text-left">Time</th>
                     <th class="px-4 py-2 text-left">Date(MM/DD/YYYY)</th>
                 </tr>
             </thead>

             <tbody>
                 <% if(orders.length) { %>
                  <% orders.forEach((order)=>{ %>
                    <tr>
                        <td class="border px-4 py-2 text-left">
                            <a  class="link " href="/customer/orders/<%= order._id %>"><%= order._id %></a>
                        </td>
                        <td class="border px-4 py-2 text-left">
                            <%= order.phone %>
                            </td>
                        <td class="border px-4 py-2 text-left">
                        <%= order.address %>
                        </td>
                        <td class="border px-4 py-2 text-left">
                           <%= moment(order.createdAt).format('hh:mm A') %>
                           </td>
                           <td class="border px-4 py-2 text-left">
                            <%= moment(order.createdAt).format('MM/DD/YYYY') %>
                            </td>
                    </tr>
                 <% }) %>

                 
                 <% } else { %>
                   <tr>
                       <td class="p-4"><span>No orders found!</span></td>
                   </tr>

                    <% } %>
             </tbody>
        </table>

    </div>


</section>